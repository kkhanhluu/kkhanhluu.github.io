{
  "compilerOptions": {
    "target": "ES2021",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "allowUmdGlobalAccess": true,
    "paths": {
      "": ["./src"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src", "src/custom.d.ts"]
}
